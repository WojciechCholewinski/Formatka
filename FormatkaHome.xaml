<Page x:Class="Formatka.FormatkaHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Formatka"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1300"
      Title="Formatka - Home">

    <Grid>

        <WrapPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">
            <Button Click="Add_New_Button_Click" Margin="0,10,0,10">
                <StackPanel Height="60" Width="150" Orientation="Horizontal">
                    <Image Source="Icons/Add_New_Icon.png" Width="50" Height="50" />
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Dodaj nowe</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="Open_Button_Click" Margin="0,10,0,10">
                <StackPanel Height="60" Width="150" Orientation="Horizontal">
                    <Image Source="Icons/Open_Icon.png" Width="50" Height="40" />
                    <TextBlock VerticalAlignment="Center" Margin="15,0,0,0">Otwarte</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="Closed_Button_Click" Margin="0,10,0,10">
                <StackPanel Height="60" Width="150" Orientation="Horizontal">
                    <Image Source="Icons/Closed_Icon.png" Width="50" Height="40" />
                    <TextBlock VerticalAlignment="Center" Margin="15,0,0,0">Zamknięte</TextBlock>
                </StackPanel>
            </Button>
            <Button Click="Wallet_Button_Click" Margin="0,10,0,10">
                <StackPanel Height="60" Width="150" Orientation="Horizontal">
                    <Image Source="Icons/Wallet_Icon.png" Width="50" Height="50" />
                    <TextBlock VerticalAlignment="Center" Margin="15,0,0,0">Portfel</TextBlock>
                </StackPanel>
            </Button>

        </WrapPanel>

        <Grid.Background>
            <ImageBrush ImageSource="watermark.png"></ImageBrush>
        </Grid.Background>
    </Grid>
</Page>
